<!DOCTYPE html>
<html lang="en">
<head>
  <title>Private Events</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <% if controller_name == 'users' %>
    <%= stylesheet_link_tag 'FormStyling', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'auth', media: 'all' %>
  <% end %>
  <%= stylesheet_link_tag  'events', media: 'all', 'data-turbolinks-track': 'reload'%>
  <%= stylesheet_link_tag  'nav', media: 'all', 'data-turbolinks-track': 'reload'%>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>


<body>
<nav>
  <div class="wrapper">
    <div class="logo"><%= link_to 'PrivateEvent', root_path %></div>
      <ul class="nav-links">
      <label for="close-btn" class="btn close-btn"><i class="fas fa-times"></i></label>
      <li><%= link_to 'All Events', events_path %></li>
      <li><%= link_to 'Past Events', past_events_path %></li>
      <li><%= link_to 'Upcoming Events', upcoming_events_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to 'Profile', user_path(current_user) %></li>
        <li><%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-button' %></li>
      <% else %>
        <li><%= link_to 'Sign In', new_user_session_path %></li>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
      <% end %>
    </ul>
  </div>
</nav>
<% if notice %><p class="notice"><%= notice %></p><% end %>
  <% if alert %><p class="alert"><%= alert %></p><% end %>

  <main class="container">
    <%= yield %>
  </main>
</body>
</html>